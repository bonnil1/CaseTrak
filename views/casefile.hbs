<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ "Add Casefile" }}</title>
    </head>
    <body>
        <h1>{{ "Add Casefile" }}</h1>
        <form action="/casefiles" method="post">
            <!-- Form fields for the new case file -->
            <label for="case_number">Case Number:</label>
            <input type="text" id="case_number" name="case_number" placeholder="enter case number">

            <label for="offense">Offense:</label>
            <input type="text" id="offense" name="offense" placeholder="enter offense">

            <label for="offense_date">Offense Date:</label>
            <input type="text" id="offense_date" name="offense_date" placeholder="enter offense date">

            <label for="request">Request:</label>
            <input type="text" id="request" name="request" placeholder="enter request">

            <label for="status">Status:</label>
            <input type="text" id="status" name="status" placeholder="enter status">

            <button type="submit">Submit</button>
        </form>
    </body>
</html>